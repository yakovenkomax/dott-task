{
  "dependencies": {},
  "description": "Search for dogs",
  "devDependencies": {
    "@ridedott/eslint-config": "^2.2.11",
    "@types/jest": "^26.0.10",
    "@types/react": "^16.9.47",
    "@types/react-dom": "^16.9.8",
    "@types/webpack-env": "^1.15.2",
    "autoprefixer": "^9.8.6",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^4.2.2",
    "cssnano": "^4.1.10",
    "eslint": "^7.7.0",
    "eslint-plugin-react": "^7.20.6",
    "html-loader": "^1.3.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.2.13",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.1.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "style-loader": "^1.2.1",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "ts-jest": "^26.2.0",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "engines": {
    "node": "12",
    "npm": ">=6.13.4"
  },
  "files": [
    "src"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run husky:pre-commit"
    }
  },
  "license": "UNLICENSED",
  "lint-staged": {
    "*.css": [
      "stylelint --fix"
    ],
    "*.ts": [
      "eslint --fix --resolve-plugins-relative-to \"./node_modules/@ridedott/eslint-config\""
    ],
    "*.{css,js,json,md,ts,yaml,yml}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "proseWrap": "always",
    "singleQuote": true,
    "trailingComma": "all"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "@ridedott/eslint-config",
      "plugin:react/recommended"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "overrides": [
      {
        "files": "./src/**/*spec.ts",
        "rules": {
          "@typescript-eslint/no-magic-numbers": "off"
        }
      }
    ],
    "parserOptions": {
      "ecmaVersion": 10,
      "project": "tsconfig.json",
      "sourceType": "module"
    },
    "rules": {
      "immutable/no-mutation": "off",
      "immutable/no-this": "off",
      "unicorn/filename-case": "off",
      "unicorn/prevent-abbreviations": "off"
    },
    "ignorePatterns": [
      "webpack.config.js",
      "@types",
      "dist"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "plugins": [
      "stylelint-order"
    ],
    "rules": {
      "at-rule-no-vendor-prefix": true,
      "color-named": "never",
      "declaration-no-important": true,
      "font-family-name-quotes": "always-unless-keyword",
      "font-weight-notation": "numeric",
      "function-url-quotes": "always",
      "media-feature-name-no-vendor-prefix": true,
      "order/order": [
        "custom-properties",
        "declarations",
        "at-rules",
        "rules"
      ],
      "order/properties-alphabetical-order": true,
      "property-no-vendor-prefix": true,
      "selector-attribute-quotes": "always",
      "selector-no-vendor-prefix": true,
      "selector-type-no-unknown": [
        true,
        {
          "ignore": [
            "custom-elements"
          ]
        }
      ],
      "value-no-vendor-prefix": true
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "name": "@ridedott/frontend-assignment-base",
  "repository": "https://github.com/ridedott/frontend-assignment-base",
  "scripts": {
    "format": "prettier --check \"src/**/*.{css,js,json,md,ts,tsx}\"",
    "format:fix": "prettier --write \"src/**/*.{css,js,json,md,ts,tsx}\"",
    "husky:lint-staged": "lint-staged",
    "husky:pre-commit": "run-p husky:lint-staged",
    "lint": "run-p lint:css lint:ts",
    "lint:css": "stylelint 'src/**/*.css'",
    "lint:css:fix": "stylelint --fix 'src/**/*.css'",
    "lint:fix": "run-p lint:*:fix",
    "lint:ts": "eslint --resolve-plugins-relative-to \"./node_modules/@ridedott/eslint-config\" --ext .tsx --ext .ts src",
    "lint:ts:fix": "eslint --fix --resolve-plugins-relative-to \"./node_modules/@ridedott/eslint-config\" --ext .tsx --ext .ts src",
    "start": "webpack-dev-server --config ./webpack.config.js",
    "test": "jest",
    "types": "tsc --noEmit"
  },
  "version": "1.0.0"
}
